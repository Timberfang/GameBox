<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MediaBox.GUI.MainWindow"
        Title="MediaBox">
    <DockPanel>
        <Grid
            DockPanel.Dock="Top"
            Background="LightBlue"
            Height="35"
            ColumnDefinitions="Auto, *, Auto">
            <Button Grid.Column="0" Margin="20, 0" Click="Button_OnClick">New</Button>
        </Grid>
        <Grid ColumnDefinitions="Auto, *">
            <StackPanel Margin="20" Grid.Column="0" MinWidth="100">
                <TextBlock>Media Type</TextBlock>
                <ComboBox SelectedIndex="0" MaxDropDownHeight="100" x:Name="Category"
                          SelectionChanged="Category_OnSelectionChanged" />
            </StackPanel>
            <ListBox Grid.Column="1" x:Name="Media" />
        </Grid>
    </DockPanel>
</Window>